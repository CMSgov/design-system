{
  "name": "design-system",
  "private": true,
  "description": "A shared set of design and code elements for creating accessible and consistent websites",
  "repository": "https://github.com/CMSgov/design-system",
  "scripts": {
    "build": "NODE_ENV=production yarn cmsds build-docs packages/design-system packages/design-system-docs",
    "bump": "lerna publish --skip-git --skip-npm",
    "precommit": "lint-staged",
    "postinstall": "lerna bootstrap && npm link ./packages/design-system-scripts",
    "test": "NODE_ENV=test yarn cmsds test ./packages",
    "posttest": "echo 'placeholder lint script'",
    "start": "NODE_ENV=development yarn cmsds start packages/design-system packages/design-system-docs",
    "start:theme": "yarn start --theme",
    "update-snapshots": "NODE_ENV=test bash scripts/jest.sh -u",
    "lint": "yarn cmsds lint packages --ignorePatterns '/**/helpers/**' '/**/__tests__/**'"
  },
  "devDependencies": {
    "@cmsgov/design-system": "file:./packages/design-system",
    "@cmsgov/design-system-docs": "file:./packages/design-system-docs",
    "@cmsgov/design-system-scripts": "file:./packages/design-system-scripts",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^2.11.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.2"
  },
  "engines": {
    "node": ">=11.0.0 <12.0.0",
    "yarn": ">=1.21.1"
  },
  "resolutions": {
    "gulp-sass/node-sass": ">=4.7.2",
    "kss/nunjucks": ">=3.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "> 2%",
    "Last 2 versions"
  ],
  "prettier": "./packages/design-system-scripts/prettier.config.js",
  "eslintConfig": {
    "extends": [
      "./packages/design-system-scripts/eslint.config.js"
    ]
  },
  "stylelint": {
    "extends": [
      "./packages/design-system-scripts/stylelint.config.js"
    ]
  }
}
