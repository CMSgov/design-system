{
  "name": "design-system",
  "private": true,
  "description": "A set of open source design and front-end development resources for creating Section 508 compliant, responsive, and consistent websites.",
  "repository": "https://github.com/CMSgov/design-system",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn gulp build",
    "build:healthcare": "yarn gulp build --package packages/ds-healthcare-gov",
    "build:medicare": "yarn gulp build --package packages/ds-medicare-gov",
    "build:docs": "yarn --cwd ./packages/docs build",
    "build:storybook": "build-storybook -o storybook-static",
    "build:storybook:docs": "build-storybook -o packages/docs/static/storybook",
    "build:tokens": "yarn --cwd ./packages/design-system-tokens build themes scss && yarn --cwd ./packages/design-system-tokens build themes css-vars && yarn --cwd ./packages/design-system-tokens dist",
    "clean": "yarn clean:cache && yarn clean:modules",
    "clean:cache": "rm -rf packages/docs/.cache",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "deploy-demo": "ts-node ./scripts/deployDemo.ts",
    "lint": "yarn lint:stylelint && yarn lint:eslint",
    "lint:eslint": "yarn eslint ./packages/",
    "lint:stylelint": "yarn stylelint ./packages/**/*.scss --custom-formatter=node_modules/stylelint-formatter-pretty",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prettier": "yarn prettier --write 'packages/**/*.{js,jsx,tsx,scss,html,md,mdx,json}'",
    "release": "./scripts/release.sh",
    "serve:docs": "yarn --cwd ./packages/docs serve",
    "start": "yarn --cwd ./packages/docs develop",
    "storybook": "start-storybook -p 6006",
    "test": "yarn test:unit && yarn test:a11y",
    "posttest": "yarn lint",
    "test:unit:coverage": "yarn test:unit --collectCoverage",
    "test:a11y": "yarn playwright test --config tests/a11y/playwright.config.ts",
    "test:unit": "yarn jest --config=tests/unit/jest.config.js",
    "test:unit:update": "yarn test:unit --updateSnapshot",
    "test:browser": "docker run --rm --network host -v $(pwd):/work/ -w /work/ mcr.microsoft.com/playwright:v1.25.0-focal yarn playwright test --config tests/browser/playwright.config.ts",
    "test:browser:update": "yarn build:storybook && docker run --rm --network host -v $(pwd):/work/ -w /work/ mcr.microsoft.com/playwright:v1.25.0-focal yarn playwright test --config tests/browser/playwright.config.ts -u",
    "type-check": "yarn tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix --allow-empty-input"
    ]
  },
  "browserslist": [
    "> 2%",
    "Last 2 versions"
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.4.4",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-object-assign": "^7.16.0",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.8.4",
    "@playwright/test": "^1.25.1",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.12",
    "@storybook/theming": "^6.5.12",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-typescript-to-proptypes": "^2.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5",
    "cssnano": "^5.1.13",
    "eslint": "^8.11.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.6",
    "eslint-plugin-testing-library": "^5.6.0",
    "fancy-log": "^2.0.0",
    "gh-pages": "^3.2.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-filter": "^7.0.0",
    "gulp-if": "^3.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "http-server": "^14.1.1",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lerna": "^3.20.0",
    "lint-staged": "^10.0.8",
    "mini-css-extract-plugin": "^1",
    "postcss": "^8",
    "postcss-import": "^15.0.0",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.6.1",
    "react": "17.0.2",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "sass": "^1.53.0",
    "sass-loader": "10.2.1",
    "stylelint": "14.6.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-formatter-pretty": "^3.1.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.1",
    "webpack-stream": "^7.0.0"
  },
  "engines": {
    "node": ">=11.0.0",
    "yarn": ">=1.22.4"
  }
}
