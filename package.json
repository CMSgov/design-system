{
  "name": "design-system",
  "private": true,
  "description": "A set of open source design and front-end development resources for creating Section 508 compliant, responsive, and consistent websites.",
  "repository": "https://github.com/CMSgov/design-system",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn cmsds build",
    "build:healthcare": "yarn cmsds build --config cmsds.healthcare.config.js",
    "build:medicare": "yarn cmsds build --config cmsds.medicare.config.js",
    "build:docs": "yarn --cwd ./packages/docs build",
    "build:storybook": "build-storybook -o storybook-static",
    "build:storybook:docs": "build-storybook -o packages/docs/static/storybook",
    "build:tokens": "yarn --cwd ./packages/design-system-tokens build themes scss && yarn --cwd ./packages/design-system-tokens build themes css-vars && yarn --cwd ./packages/design-system-tokens dist",
    "deploy-demo": "ts-node ./scripts/deployDemo.ts",
    "lint": "yarn lint:stylelint && yarn lint:eslint",
    "lint:eslint": "npx eslint ./packages/",
    "lint:stylelint": "npx stylelint ./packages/**/*.scss --custom-formatter=node_modules/stylelint-formatter-pretty",
    "loki": "STORYBOOK_DS=core ./scripts/loki.sh",
    "loki:healthcare": "STORYBOOK_DS=healthcare ./scripts/loki.sh",
    "loki:medicare": "STORYBOOK_DS=medicare ./scripts/loki.sh",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prettier": "npx prettier --write 'packages/**/*.{js,jsx,tsx,scss,html,md,mdx,json}'",
    "release": "./scripts/release.sh",
    "serve:docs": "yarn --cwd ./packages/docs serve",
    "start": "yarn --cwd ./packages/docs develop",
    "storybook": "start-storybook -p 6006",
    "test": "yarn test:unit && yarn test:a11y core",
    "posttest": "yarn lint",
    "test-coverage": "yarn cmsds test ./packages --collectCoverage",
    "test:a11y": "yarn jest --config=tests/a11y/jest.config.js",
    "test:a11y:healthcare": "yarn jest --config=tests/a11y/jest.config.js healthcare",
    "test:a11y:medicare": "yarn jest --config=tests/a11y/jest.config.js medicare",
    "test:unit": "yarn jest --config=tests/unit/jest.config.js",
    "test:browser": "yarn playwright test --config tests/browser/playwright.config.ts",
    "test:browser:docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ --env USE_STATIC_STORYBOOK=true mcr.microsoft.com/playwright:v1.25.0-focal yarn test:browser",
    "type-check": "yarn tsc --noEmit",
    "update-snapshots": "yarn jest --config=tests/unit/jest.config.js --updateSnapshot"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix --allow-empty-input"
    ]
  },
  "browserslist": [
    "> 2%",
    "Last 2 versions"
  ],
  "resolutions": {
    "kss/nunjucks": ">=3.2.0"
  },
  "devDependencies": {
    "@axe-core/webdriverjs": "^4.4.3",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-object-assign": "^7.16.0",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.8.4",
    "@playwright/test": "^1.25.1",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.4.9",
    "@storybook/theming": "^6.4.9",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-typescript-to-proptypes": "^2.0.0",
    "chromedriver": "^104.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "3.6.2",
    "eslint": "^8.11.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-storybook": "^0.5.7",
    "eslint-plugin-testing-library": "^5.6.0",
    "gh-pages": "^3.2.3",
    "http-server": "^14.1.1",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lerna": "^3.20.0",
    "lint-staged": "^10.0.8",
    "loki": "^0.30.3",
    "mini-css-extract-plugin": "1",
    "postcss": "8",
    "postcss-scss": "^4.0.3",
    "prettier": "2.6.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-test-renderer": "16.14.0",
    "sass": "^1.53.0",
    "sass-loader": "10.2.1",
    "selenium-webdriver": "4.1.0",
    "static-server": "^2.2.1",
    "stylelint": "14.6.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-formatter-pretty": "^3.1.0",
    "stylelint-scss": "^4.2.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.1"
  },
  "engines": {
    "node": ">=11.0.0",
    "yarn": ">=1.22.4"
  }
}
