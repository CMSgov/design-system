{
  "name": "design-system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "A shared set of design and code elements for creating accessible and consistent websites",
  "repository": "https://github.com/CMSgov/design-system",
  "scripts": {
    "start": "NODE_ENV=development yarn cmsds start ./packages/design-system ./packages/design-system-docs --core",
    "build": "NODE_ENV=production yarn cmsds build-docs ./packages/design-system ./packages/design-system-docs --core",
    "release": "./prepublish.sh && yarn lerna publish from-git",
    "precommit": "lint-staged",
    "test": "yarn test:unit",
    "test:unit": "NODE_ENV=test yarn cmsds test ./packages --core",
    "test:e2e": "NODE_ENV=test yarn cmsds test:e2e ./packages --buildPath ./packages/design-system-docs/dist",
    "update-snapshots": "NODE_ENV=test yarn cmsds test ./packages --core --updateSnapshot",
    "posttest": "yarn lint",
    "lint": "yarn cmsds lint ./ --ignorePatterns '**/node_modules/**' '**/dist/**' '**/helpers/**' '**/__tests__/**'"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.5",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "stylelint": "^13.3.2"
  },
  "engines": {
    "node": ">=11.0.0 <12.0.0",
    "yarn": ">=1.21.1"
  },
  "resolutions": {
    "gulp-sass/node-sass": ">=4.7.2",
    "kss/nunjucks": ">=3.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "> 2%",
    "Last 2 versions"
  ]
}
