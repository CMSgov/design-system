{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Allows `*.example.tsx` files in `docs` to import directly from `src`
    "baseUrl": ".",
    "paths": {
      "@design-system/*": ["*"],
      "@src/*": ["src/*"]
    }
  }
}
