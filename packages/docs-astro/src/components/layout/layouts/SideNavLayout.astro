---
import { SkipNav, UsaBanner } from '@cmsgov/design-system';
import BaseHead from '../landmarks/BaseHead.astro';
import SideNav from '../landmarks/SideNav.astro';
import Footer from '../landmarks/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  children: any;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <SkipNav href="#main" />
    <UsaBanner className="ds-u-display--none ds-u-md-display--block" />
    <div class="ds-l-row ds-u-margin--0 full-height">
      <SideNav />
      <main class="ds-l-md-col ds-u-padding--0 ds-u-padding-bottom--4">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
