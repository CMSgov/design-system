---
import '@cmsgov/design-system/css/index.css';
import '@cmsgov/design-system/css/core-theme.css';
import type { CollectionEntry } from 'astro:content';
import { SkipNav, UsaBanner } from '@cmsgov/design-system';
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'foundation'>['data'] | CollectionEntry<'guidelines'>['data'];

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description="" />
  </head>

  <body>
    <SkipNav href="#main" />
    <UsaBanner className="ds-u-display--none ds-u-md-display--block" />

    <div class="ds-l-row ds-u-margin--0 full-height">
      <Navigation />
      <main class="ds-l-md-col ds-u-padding--0 ds-u-padding-bottom--4">
        <article>
          <h1 class="title">{title}</h1>
          <hr />
          <slot />
        </article>
      </main>
    </div>
    <Footer />
  </body>
</html>
