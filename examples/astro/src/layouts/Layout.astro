---
import '@cmsgov/design-system/css/index.css';
import '@cmsgov/design-system/css/core-theme.css';
import { SkipNav, UsaBanner } from '@cmsgov/design-system';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - CMSDS Astro Example</title>
	</head>
	<body class="ds-content">
		<SkipNav href="#main" client:load />
    <UsaBanner client:idle />
		<main id="main">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	body {
		margin: 0;
	}

	h1, h2, h3, h4, h5, h6 {
		margin-block-start: 1.5em !important;
	}
</style>
